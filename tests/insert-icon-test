#! /usr/bin/env bash
tests_dir()
{
    dirname "$(readlink -f "${BASH_SOURCE}")"
}

lib_dir()
{
    echo "$(tests_dir)/lib"
}

fixtures_dir()
{
    echo "$(tests_dir)/fixtures"
}

bin_dir()
{
    local dir="$(dirname "$(tests_dir)")"

    echo "${dir}/bin"
}

. "$(lib_dir)"/functions

