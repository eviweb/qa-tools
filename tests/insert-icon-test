    assert_equals "${messages_amended["${message}"]}" "$("$(bin_dir)"/insert-icon "${message}")"
done

echo -e "\n> Test bug fixes"
for bug in "${!bugs[@]}"; do
    assert_equals "${bugs["${bug}"]}" "$("$(bin_dir)"/insert-icon "${bug}")"
done

